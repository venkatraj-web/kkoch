<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'app.css' | asset_url | stylesheet_tag }}
  

  {{ 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css' | stylesheet_tag }}
  {{ 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css' | stylesheet_tag }}
  {{ 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css' |  stylesheet_tag }}
  {{ 'magnific-popup.css' | asset_url | stylesheet_tag }}
  
  {{ 'https://code.jquery.com/jquery-3.6.0.min.js' | script_tag }}

  {{ 'https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js' | script_tag }}
  <script src="{{ 'jquery.magnific-popup.min.js' | asset_url }}" defer></script>
  
  <script src="{{ 'app.js' | asset_url }}" defer></script>
  {% comment %} <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script> {% endcomment %}

  <style>
    [x-cloak] { display: none !important; }
  </style>
</head>
<body>
  {%- render 'cart-drawer' -%}

  {% section 'header' %}

  <main role="main">
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}
</body>
</html>
