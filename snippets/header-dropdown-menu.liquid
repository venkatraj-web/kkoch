<nav class=" space-x-10">
          <div class="flex space-x-10">
            {% for link in main_menu_linklists %}
              {% if link.links != blank %}
              <div x-data="{ open: false }" class="relative block" x-on:mouseenter="open = true" 
              x-on:mouseleave="open = false">
                <button  type="button"
                  class="inline-flex items-center text-base text-white-500 hover:text-white-900">
                  {{link.title}}
                  {% render 'icon-dropdown' %}
                </button>
    
                <div x-show="open" @mouseenter.away="open = false"
                  class="absolute z-[999] -ml-5 mt-5 transform px-2 min-w-60 sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2">
                  <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                    <div class="relative grid gap-6 bg-white px-3 py-3 sm:gap-8 sm:p-2">
    
                      <!-- CREATE THE SUBLINK -->
                      {% for childlink in link.links %}
                      <a href="{{childlink.url}}" class="-m-3 p-3 flex items start rounded-lg hover:bg-gray-100">
                        <div class="ml-4">
                          <p class="text-white-900 text-base font-medium">
                            {{ childlink.title }}
                          </p>
                        </div>
                      </a>
                      {% endfor %}
    
                    </div>
                  </div>
                </div>
    
              </div>
              {% else %}
              <div class="relative">
                <a href="{{ link.url }}" class="text-base text-white-500 hover:text-white-900">{{link.title}}</a>
              </div>
              {% endif %}
            {% endfor %}
          </div>
  
        </nav>