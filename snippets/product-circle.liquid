<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{ productData.url }}">
            {% if productData.featured_image %}
                <div class="h-full overflow-hidden">
                    <img class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform" src="{{ productData.featured_image | img_url: 'medium' }}" alt="{{ productData.featured_image.alt }}">
                </div>
                
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
        </a>
        
        {% comment %} <div class="flex flex-col p-4">
            <span class="text-sm text-gray-400">{{ productData.vendor }}</span>

            <a href="{{ productData.url }}" class="text-gray-700 uppercase font-medium">{{ productData.title }}</a>

            <p class="text-gray-500">{{ productData.price | money }}</p>
        </div> {% endcomment %}
        
    </div>
</div>